<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/dip_twenty_two"
        android:layout_height="@dimen/dip_twenty_two"
        android:layout_marginRight="@dimen/dip_four"
        android:src="@drawable/sample_footer_error" />

    <TextView
        android:id="@+id/loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_four"
        android:text="@string/list_footer_network_error"
        android:textColor="@color/md_light_primary_text"
        android:textSize="@dimen/sp_forteen" />
</LinearLayout>