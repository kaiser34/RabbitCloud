<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/md_grey_100"
              android:orientation="vertical">

    <com.jude.rollviewpager.RollPagerView
        android:id="@+id/recommend_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_one_hundred_forty"
        android:background="@color/white"
        android:orientation="vertical"/>

    <GridView
        android:id="@+id/recommend_navs_grid"
        android:paddingTop="@dimen/dip_ten"
        android:paddingBottom="@dimen/dip_ten"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dip_ten"
        android:numColumns="4"/>
</LinearLayout>